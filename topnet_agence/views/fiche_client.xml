<odoo>
    <data>
        <!-- explicit list view definition -->

        <record model="ir.ui.view" id="fiche_list">
            <field name="name">fiche list</field>
            <field name="model">client.fiche</field>
            <field name="arch" type="xml">
                <tree string="Clients">
                    <field name="name"/>
                    <field name="related_dossier_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="fiche_form">
            <field name="name">fiche form</field>
            <field name="model">client.fiche</field>
            <field name="arch" type="xml">
                <form>
                    <header>

                        <button name="action_valider" type="object" string="validé" class="oe_highlight"
                                groups="topnet_agence.group_topnet_agent"/>
                        <button name="action_non_valider" type="object" string="non validé" class="oe_highlight"
                                groups="topnet_agence.group_topnet_agent"/>
                        <field name="state" widget="statusbar" statusbar_visible="nouveau,valider,non_valider,dossier"
                               options="{'clickable':0}"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_depot" class="oe_stat_button" type="object" string="Déposer "
                                    icon="fa-pencil-square-o">
                                <!--  <field string="Déposer dossier" name="dossier_lines" widget="statinfo"/>-->
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="id_contrat" readonly="1"/>
                            </h1>
                            <group>
                                <field name="related_dossier_id" options="{'no_create': True, 'no_open': False}"/>
                            </group>
                        </div>

                        <group>
                            <group string="Informations personnels">
                                <field name="name"/>
                                <field name="cin_pass"/>
                                <field name="email_pri"/>
                            </group>

                            <group string="Offre Professionnel">
                                <field name="type_offre"/>
                                <field name="debit"/>
                            </group>
                        </group>
                        <group>
                            <group string="Informations sur l'entreprise">
                                <field name="raison"/>
                                <field name="registre"/>
                                <field name="tva"/>
                                <field name="Exonéré" widget="radio"/>
                                <field name="douane"/>
                                <field name="activity" />
                            </group>


                            <group string="Adresse et coordonnées">

                                <field name="correspondance"/>
                                <field name="Ville"/>
                                <field name="postale"/>
                                <field name="tel"/>
                                <field name="fax"/>
                                <field name="installation"/>
                                <field name="ville2"/>
                                <field name="postale2"/>
                                <field name="tel2"/>
                                <field name="fax2"/>


                            </group>

                        </group>
                        <notebook>
                            <page string=" Contact Administratif et Financiers">
                                <group>
                                    <field name="nom"/>
                                    <field name="Tel_admi"/>
                                    <field name="gsm_admi"/>
                                    <field name="email_admi"/>
                                </group>
                            </page>
                            <page string="Contact technique">
                                <group>
                                    <field name="nom_tech"/>
                                    <field name="tel_tech"/>
                                    <field name="gsm_tech"/>
                                    <field name="email_tech"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class='oe_chatter'>
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread" option="{'post_refresh': 'recipients'}"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="topnet_client_search" model="ir.ui.view">
            <field name="name">topnet.client.search</field>
            <field name="model">client.fiche</field>
            <field name="arch" type="xml">
                <search string="Chercher un client">
                    <field name="name" filter_domain="['|',('name', 'ilike', self),('id_contrat', 'ilike', self)]"/>
                    <field name="id_contrat"/>
                    <field name="name"/>
                </search>
            </field>
        </record>

        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="fiche_action_window">
            <field name="name">Client</field>
            <field name="res_model">client.fiche</field>
            <field name="view_mode">kanban,form,tree</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer votre premier client !
                </p>
            </field>
        </record>


        <!-- Top menu item -->
        <menuitem name="Topnet" id="topnet_menu_root" sequence="-1"/>

        <!-- menu Espace clients  -->
        <menuitem name="Espace Client" id="espace_clt" parent="topnet_menu_root" sequence="10"/>

        <!-- actions -->
        <menuitem name="Inscription Client " id="creation_clients" parent="espace_clt" action="fiche_action_window"/>
        <menuitem name="Liste des clients " id="liste_clients" parent="espace_clt" action="fiche_action_window"/>

    </data>
</odoo>